<a id="portal-logo"
   title="Home"
   accesskey="1"
   tal:attributes="href view/navigation_root_url;
                   title view/navigation_root_title;"
   i18n:domain="plone"
   i18n:attributes="title">
    <img src="logo.jpg" alt=""
         tal:condition="context/portal_properties/site_properties/show_header_logo|python:True"
         tal:replace="structure view/logo_tag" />

    <span id="header-text"
          tal:condition="context/portal_properties/site_properties/show_header_text|python:False">
      <span id="portal-title" tal:content="python: view.portal_state.portal().Title()" />
      <span id="portal-description" tal:content="python: view.portal_state.portal().Description()" />
    </span>

</a>
