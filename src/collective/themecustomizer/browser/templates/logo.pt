<a id="portal-logo"
   title="Home"
   accesskey="1"
   tal:attributes="href view/navigation_root_url;
                   title view/navigation_root_title"
   i18n:domain="plone"
   i18n:attributes="title">
    <img src="logo.png" alt="" tal:condition="view/show_logo"
         tal:replace="structure view/logo_tag" />

    <span id="header-text"
          tal:condition="view/show_portal_title">
      <span id="portal-title" tal:content="view/get_portal_title" />
      <span id="portal-description" tal:content="view/get_portal_description" />
    </span>
</a>
